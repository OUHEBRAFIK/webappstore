{
    "version": 2,
    "public": true,
    "cleanUrls": true,
    "build": {
      "env": {
        "ENABLE_VC_BUILD_EXTERNAL_INSTALL": "1"
      }
    },
    "framework": "vite",
    "outputDirectory": "client/dist",
    "rewrites": [
      { "source": "/api/(.*)", "destination": "server/index.ts" },
      { "source": "/sitemap.xml", "destination": "server/index.ts" },
      { "source": "/assets/(.*)", "destination": "client/dist/assets/$1" },
      { "source": "/(.*)", "destination": "client/dist/index.html" }
    ]
  }